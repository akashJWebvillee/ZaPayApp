<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="10dp"
    android:background="#00DC4E43"
    android:elevation="3dp"
    card_view:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectanguler_bg"
        android:backgroundTint="@color/colorWhite"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/viewAllNameType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gotha_prolig"
                    android:gravity="start"
                    android:text="@string/borrower"
                    android:textColor="@color/navTextColor60Alpha"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/nameTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewAllNameType"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/gotha_promed"
                    android:gravity="start"
                    android:maxLines="1"
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    android:text="Sandeep Singh"/>

                <LinearLayout
                    android:id="@+id/lendLLAmountTerms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nameTV"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="30dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lendTxtAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gotha_prolig"
                            android:gravity="start"
                            android:text="@string/amount"
                            android:textColor="@color/navTextColor60Alpha"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/amountTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/gotha_promed"
                            android:gravity="start"
                            android:text="$100"
                            android:textColor="@color/textColor"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lendTxtTerms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gotha_prolig"
                            android:gravity="start"
                            android:text="@string/terms"
                            android:textColor="@color/navTextColor60Alpha"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/termTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/gotha_promed"
                            android:gravity="start"
                            android:text="None"
                            android:textColor="@color/textColor"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lendLLPaymentPayback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lendLLAmountTerms"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="30dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gotha_prolig"
                            android:gravity="start"
                            android:text="@string/payments"
                            android:textColor="@color/navTextColor60Alpha"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/noOfPaymentTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/gotha_promed"
                            android:gravity="start"
                            android:text="3"
                            android:textColor="@color/textColor"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gotha_prolig"
                            android:gravity="start"
                            android:text="@string/payback_dates"
                            android:textColor="@color/navTextColor60Alpha"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/paymentDateTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/gotha_promed"
                            android:gravity="start"
                            android:text="2/1/2021"
                            android:textColor="@color/textColor"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/negotiateAcceptLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lendLLPaymentPayback"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="30dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gotha_prolig"
                            android:gravity="start"
                            android:text="@string/negotiated_by"
                            android:textColor="@color/navTextColor60Alpha"
                            android:textSize="14sp" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/gotha_promed"
                            android:gravity="start"
                            android:text="Sandeep Singh"
                            android:textColor="@color/textColor"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gotha_prolig"
                            android:gravity="start"
                            android:text="@string/accepted_by"
                            android:textColor="@color/navTextColor60Alpha"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/gotha_promed"
                            android:gravity="start"
                            android:text="Sanjay Sir"
                            android:textColor="@color/textColor"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>







                <LinearLayout
                    android:id="@+id/commissionLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="25dp"
                    android:layout_below="@+id/negotiateAcceptLL"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/commissionTitleTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gotha_prolig"
                        android:gravity="start"
                        android:text="@string/zapay_commission"
                        android:textColor="@color/navTextColor60Alpha"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/commissionValueTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/gotha_promed"
                        android:gravity="start"
                        android:text="$3.25"
                        android:textColor="@color/textColor"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/totalPlayReceiveTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/commissionLL"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/gotha_prolig"
                    android:gravity="start"
                    android:text="@string/total_to_pay_back"
                    android:textColor="@color/navTextColor60Alpha"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/totalPayBackTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/totalPlayReceiveTV"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/gotha_promed"
                    android:gravity="start"
                    android:text="$220"
                    android:textColor="@color/navTextColor"
                    android:textSize="20sp"
                    android:layout_marginBottom="10dp"/>


                <TextView
                    android:id="@+id/payBackDateTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gotha_prolig"
                    android:gravity="start"
                    android:text="@string/payback_dates"
                    android:textColor="@color/navTextColor60Alpha"
                    android:textSize="14sp"
                    android:layout_below="@+id/totalPayBackTV"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="5dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/paybackDateRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/payBackDateTV"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="10dp" />

            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>


</androidx.cardview.widget.CardView>

















