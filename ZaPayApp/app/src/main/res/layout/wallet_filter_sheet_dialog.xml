<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectanguler_top_round_30dp">

        <TextView
            android:id="@+id/titleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="26dp"
            android:fontFamily="@font/gotha_promed"
            android:gravity="center"
            android:text="@string/filter"
            android:textColor="@color/blackColor"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/closeTV"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/clear"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/lineView1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:background="@color/grayColor_opacity_5"
            app:layout_constraintTop_toBottomOf="@+id/titleTV" />


        <RelativeLayout
            android:id="@+id/rightRL"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lineView1">

            <LinearLayout
                android:id="@+id/LL1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="3dp"
                android:paddingBottom="3dp">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:contentDescription="@null"
                    android:src="@drawable/checkbox_unselect" />

                <TextView
                    android:id="@+id/contactTxtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:layout_marginEnd="23dp"
                    android:fontFamily="@font/gotha_pro_reg"
                    android:gravity="start|center_vertical"
                    android:includeFontPadding="false"
                    android:textColor="@color/textColor"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:text="@string/by_add_money"
                    android:ellipsize="end"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL2"
                android:layout_below="@+id/LL1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="3dp"
                android:paddingBottom="3dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:contentDescription="@null"
                    android:src="@drawable/checkbox_unselect" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:layout_marginEnd="23dp"
                    android:fontFamily="@font/gotha_pro_reg"
                    android:gravity="start|center_vertical"
                    android:includeFontPadding="false"
                    android:textColor="@color/textColor"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:text="@string/by_money_withdraw"
                    android:ellipsize="end"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL3"
                android:layout_below="@+id/LL2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="3dp"
                android:paddingBottom="3dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:contentDescription="@null"
                    android:src="@drawable/checkbox_unselect" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:layout_marginEnd="23dp"
                    android:fontFamily="@font/gotha_pro_reg"
                    android:gravity="start|center_vertical"
                    android:includeFontPadding="false"
                    android:textColor="@color/textColor"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:text="@string/short_by_date"
                    android:ellipsize="end"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_left_right_rounded_top_10dp"
            android:elevation="20dp"
            app:layout_constraintTop_toBottomOf="@+id/rightRL">

            <TextView
                android:id="@+id/clearAllTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="70dp"
                android:fontFamily="@font/gotha_promed"
                android:gravity="center"
                android:text="@string/clear_all"
                android:textColor="@color/textColor"
                android:textSize="17sp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@color/grayColor_opacity_5" />

            <TextView
                android:id="@+id/applyTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="70dp"
                android:fontFamily="@font/gotha_promed"
                android:gravity="center"
                android:text="@string/done"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp" />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
