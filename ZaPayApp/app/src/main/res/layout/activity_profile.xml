<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    tools:context=".activity.ForgotPasswordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@color/colorPrimary"
            android:contentDescription="@null" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:layout_marginTop="148dp"
            android:background="@drawable/rectanguler_bottom_corner_bg" />

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:src="@mipmap/ic_user"
            app:siRadius="6dp"
            android:layout_centerHorizontal="true"
            app:siBorderWidth="0dp"
            app:siBorderColor="#00ffffff"
            app:siSquare="true"
            android:layout_marginTop="100dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:layout_marginTop="148dp"
            android:elevation="10dp"
            android:orientation="vertical"
            android:paddingStart="48dp"
            android:paddingEnd="48dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="John Deo"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="24dp"
                android:fontFamily="@font/gotha_pro_reg"
                android:textColor="@color/textColorBold"
                android:layout_marginTop="60dp"/>

            <TextView
                style="@style/textViewMediumStyleRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="0dp"
                android:includeFontPadding="false"
                android:text="junify@gmail.com"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>


            <TextView
                style="@style/textViewMediumStyleRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:includeFontPadding="false"
                android:text="@string/mobile_no"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="40dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9999888877"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20dp"
                android:fontFamily="@font/gotha_pro_reg"
                android:textColor="@color/textColorBold" />


            <TextView
                style="@style/textViewMediumStyleRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:includeFontPadding="false"
                android:text="Address"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="26dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="101, Lorem ipsum dolor sit amet "
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20dp"
                android:fontFamily="@font/gotha_pro_reg"
                android:textColor="@color/textColorBold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:includeFontPadding="false"
                android:text="@string/change_password"
                android:background="@drawable/rectanguler_border"
                android:paddingTop="5dp"
                android:padding="10dp"
                android:textSize="13dp"
                android:fontFamily="@font/gotha_pro_reg"
                android:paddingBottom="5dp"
                android:layout_marginTop="202dp"/>

            <com.dd.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                app:sl_cornerRadius="56dp"
                android:layout_gravity="center"
                app:sl_dx="0dp"
                app:sl_dy="0dp"
                app:sl_shadowColor="#2CFC5C04"
                app:sl_shadowRadius="4dp">

                <TextView
                    android:id="@+id/loginButtonTV"
                    android:layout_width="280dp"
                    android:layout_height="53dp"
                    style="@style/textViewMediumStyleRegular"
                    android:textStyle="bold"
                    android:background="@drawable/rectanguler_button_bg"
                    android:backgroundTint="@color/colorPrimary"
                    android:gravity="center"
                    android:text="@string/edit_profile"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"/>
            </com.dd.ShadowLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>