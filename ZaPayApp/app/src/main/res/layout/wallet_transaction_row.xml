<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectanguler_4redius"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:padding="12dp"
        android:elevation="1dp">

        <TextView
            android:id="@+id/idTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotha_promed"
            android:includeFontPadding="false"
            android:text=""
            android:textColor="@color/blackColor"
            android:textSize="15sp"
            android:layout_marginEnd="80dp"
            android:lineSpacingExtra="2dp"
            android:layout_toStartOf="@+id/amountTV"/>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idTv"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/gotha_pro_reg"
            android:includeFontPadding="false"
            android:text=""
            android:textColor="@color/textColor"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/amountTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/gotha_promed"
            android:includeFontPadding="false"
            android:textColor="@color/greenColor"
            android:textSize="15sp"
            android:text=""
            />

        <TextView
            android:id="@+id/titleTV"
            android:layout_below="@+id/amountTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/gotha_pro_reg"
            android:includeFontPadding="false"
            android:text=""
            android:layout_marginTop="8dp"
            android:textColor="@color/textColor"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/statusTV"
            android:layout_below="@+id/titleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/gotha_pro_reg"
            android:includeFontPadding="false"
            android:text=""
            android:layout_marginTop="8dp"
            android:textColor="@color/greenColor"
            android:textSize="12sp"/>


    </RelativeLayout>

</layout>
