<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    tools:context=".activity.TermConditionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@color/colorPrimary"
            android:contentDescription="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:layout_marginTop="148dp"
            android:background="@drawable/rectanguler_bottom_corner_bg"
            android:elevation="10dp"
            android:orientation="vertical"
            android:paddingStart="31dp"
            android:paddingEnd="31dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/terms_and_conditions"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="24dp"
                android:fontFamily="@font/gotha_pro_reg"
                android:padding="10dp"
                android:textColor="@color/textColorBold"
                android:layout_marginTop="35dp"/>

            <TextView
                style="@style/textViewMediumStyleRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="22dp"
                android:includeFontPadding="false"
                android:text="Nemo enim ipsam voluptatem quia volpts sit aspernatur aut odit aut fugit sed quia consqu magni dolores eos qui ratione voluptatem qui nesciunt."
                android:paddingTop="5dp"
                android:textAlignment="center"
                android:paddingBottom="5dp"/>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>