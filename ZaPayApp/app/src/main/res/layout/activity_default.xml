<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DefaultTransactionActivity">

    <include
        android:id="@+id/defaultScreenToolbar"
        layout="@layout/custom_toolbar"/>

    <RelativeLayout
        android:layout_below="@+id/defaultScreenToolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/defaultTransactionRecView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"/>

        <include layout="@layout/view_no_data" />


    </RelativeLayout>


</RelativeLayout>