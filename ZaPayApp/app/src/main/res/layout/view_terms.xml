<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lendViewTerms"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/gotha_promed"
        android:text="@string/select_terms"
        android:textColor="@color/textColor"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="19dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/lendTermsTxtPercent"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="0.15"
            android:background="@drawable/grey_bg_rounded"
            android:fontFamily="@font/gotha_pro_reg"
            android:gravity="center"
            android:text="@string/percent"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lendTermsTxtFee"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="0.20"
            android:background="@drawable/grey_bg_rounded"
            android:fontFamily="@font/gotha_pro_reg"
            android:gravity="center"
            android:text="@string/fee"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lendTermsTxtDiscount"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="0.4"
            android:background="@drawable/grey_bg_rounded"
            android:fontFamily="@font/gotha_pro_reg"
            android:gravity="center"
            android:text="@string/discount"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lendTermsTxtNone"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="0.25"
            android:background="@drawable/grey_bg_rounded"
            android:fontFamily="@font/gotha_pro_reg"
            android:gravity="center"
            android:text="@string/none"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/lendTermsTxtOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/gotha_promed"
        android:text="@string/enter_percent"
        android:textColor="@color/textColor"
        android:textSize="16sp" />

    <com.org.zapayapp.uihelpers.CustomTextInputLayout
        android:id="@+id/lendTermsInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:padding="0dp"
        android:theme="@style/TextInputLayoutAppearance"
        app:boxBackgroundMode="none"
        app:boxStrokeColor="@null"
        app:errorIconDrawable="@null"
        app:errorTextAppearance="@style/error_appearance"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/lendTermsEdtOption"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="19dp"
            android:background="@drawable/rectanguler_border_light"
            android:fontFamily="@font/gotha_pro_reg"
            android:gravity="start|center_vertical"
            android:hint="@string/enter_percent"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:maxLength="3"
            android:paddingStart="15dp"
            android:paddingTop="1dp"
            android:paddingEnd="15dp"
            android:paddingBottom="1dp"
            android:textColor="@color/textColor"
            android:textColorHint="@color/navTextColor50Alpha"
            android:textSize="17sp"
            android:theme="@style/TextInputLayoutAppearance" />
    </com.org.zapayapp.uihelpers.CustomTextInputLayout>
</LinearLayout>