<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:contentDescription="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="148dp"
            android:background="@drawable/rectanguler_bottom_corner_bg"
            android:elevation="10dp"
            android:orientation="vertical"
            android:paddingStart="31dp"
            android:paddingEnd="31dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_us"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="24sp"
                android:fontFamily="@font/gotha_pro_reg"
                android:textColor="@color/textColorBold"
                android:layout_marginTop="35dp"/>

            <TextView
                style="@style/textViewMediumStyleRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:includeFontPadding="false"
                android:text="Nemo enim ipsam voluptatem quia volpts sit aspernatur aut odit aut fugit sed quia consqu magni dolores eos qui ratione voluptatem qui nesciunt"
                android:gravity="start"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>