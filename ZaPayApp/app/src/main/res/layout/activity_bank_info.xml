<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    tools:context=".activity.ForgotPasswordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="93dp"
            android:elevation="10dp"
            android:background="@drawable/rectanguler_bottom_corner_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bank_account_setup"
                android:textStyle="normal"
                android:gravity="start"
                android:textSize="24sp"
                android:fontFamily="@font/gotha_pro_reg"
                android:textColor="@color/navTextColor"
                android:layout_marginTop="70dp"
                android:layout_marginStart="31dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:fontFamily="@font/gotha_pro_reg"
                android:text="@string/account_number"
                android:layout_marginTop="49dp"
                android:layout_marginStart="31dp"
                android:textColor="@color/navTextColor"
                android:alpha="0.5"/>

            <TextView
                android:id="@+id/accountNumberTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5689 5689 2356"
                android:textStyle="normal"
                android:gravity="start"
                android:textSize="22sp"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/gotha_pro_reg"
                android:textColor="@color/navTextColor"
                android:layout_marginStart="31dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:fontFamily="@font/gotha_pro_reg"
                android:text="@string/routing_number"
                android:layout_marginTop="30dp"
                android:layout_marginStart="31dp"
                android:alpha="0.5"
                android:textColor="@color/navTextColor"/>

            <TextView
                android:id="@+id/routingNumberTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2346574651321"
                android:textStyle="normal"
                android:gravity="start"
                android:textSize="22sp"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/gotha_pro_reg"
                android:textColor="@color/navTextColor"
                android:layout_marginStart="31dp"/>

            <com.dd.ShadowLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="299dp"
                android:layout_marginBottom="50dp"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                app:sl_cornerRadius="56dp"
                android:layout_gravity="center"
                app:sl_dx="0dp"
                app:sl_dy="10dp"
                app:sl_shadowColor="#2CFC5C04"
                app:sl_shadowRadius="4dp">

                <TextView
                    android:id="@+id/changeTV"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    style="@style/textViewMediumStyleRegular"
                    android:textStyle="normal"
                    android:background="@drawable/rectanguler_button_bg"
                    android:backgroundTint="@color/colorPrimary"
                    android:gravity="center"
                    android:text="@string/change"
                    android:textColor="@color/colorWhite" />
            </com.dd.ShadowLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>