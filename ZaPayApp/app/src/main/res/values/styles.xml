<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">#1A19151B</item>
        <item name="colorControlActivated">#1A19151B</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <!-- reference our hint & error styles -->
        <item name="colorControlNormal">@color/editTextViewColor</item>
        <item name="colorControlActivated">@color/editTextViewColor</item>
        <item name="colorControlHighlight">@color/editTextViewColor</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="NavigationTextViewStyle" parent="android:Widget.TextView">
      <!--  <item name="android:fontFamily">@font/nunitosans_bold</item>-->
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="NavigationView">
        <item name="android:listDivider">@android:color/transparent</item>
        <!--<item name="android:fontFamily">@font/nunitosans_light</item>-->
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:scrollbarThumbVertical">@android:color/transparent</item>
    </style>

    <style name="editTextStyle" parent="AppTheme">
        <item name="fontFamily">@font/gotha_pro_reg</item> <!-- normal font style-->
        <item name="android:textSize">20sp</item> <!-- 22 px :- 13.0 -->
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/navTextColorAlpha</item>
    </style>

    <style name="textViewMediumStyleRegular" parent="AppTheme">
        <item name="android:fontFamily">@font/gotha_pro_reg</item>
        <item name="android:textSize">16sp</item> <!--16px == 10sp -->
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <!--  <item name="android:windowExitAnimation">@anim/slide_down</item>-->
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>
