<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item
                android:bottom="1dp"
                android:left="-2dp"
                android:right="-2dp"
                android:top="-2dp">
                <shape android:shape="rectangle" >
                    <stroke
                        android:width="1dp"
                        android:color="@color/editTextViewColor" />

                    <solid android:color="@android:color/transparent" />

                    <padding android:left="5dp"
                        android:right="10dp"
                        android:top="5dp"
                        android:bottom="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>