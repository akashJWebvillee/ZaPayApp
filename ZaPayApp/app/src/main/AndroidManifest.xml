<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.org.zapayapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.LendingSummaryActivity"></activity>
        <activity android:name=".activity.BorrowSummaryActivity" />
        <activity android:name=".activity.TransactionActivity" />
        <activity android:name=".activity.HistoryActivity" />
        <activity android:name=".activity.BankInfoActivity" />
        <activity android:name=".activity.ProfileActivity" />
        <activity android:name=".activity.HelpActivity" />
        <activity android:name=".activity.AboutUsActivity" />
        <activity android:name=".activity.TermConditionActivity" />
        <activity android:name=".activity.ForgotPasswordActivity" />
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.BaseActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.HomeActivity" />
    </application>

</manifest>